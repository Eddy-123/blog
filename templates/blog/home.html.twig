{% extends "base.html.twig" %}

{% block body %}
    {% for post in posts %}
        <div>
            <p>
                <a href="{{ path('blog_read', {'id': post.id}) }}">
                    {{ post.title }}
                </a>
                {% if is_granted('EDIT', post) %}
                    |
                    <a href="{{ path('blog_update', {'id': post.id}) }}">
                        Modifier
                    </a>
                {% endif %}
            </p>
            <p>
                <img src="{{ asset(post.image) }}" alt="{{ post.title }}"/>
            </p>
        </div>
    {% endfor %}
    
    <ul class="pagination">
        {% for page in range %}
            <li class="page-item">
                <a href="{{ path('blog_home', {"page" : page}) }}" class="page-link">
                    {{ page }}
                </a>
            </li>
        {% endfor %}        
    </ul>
{% endblock %}
